<div class="form ff formable">
<h4> Add new food</h4>

<%= form_with model: @food, url: foods_path do |form| %>
  <div class="input noBorder">
    <%= form.text_field :name, placeholder: "Name of the food...", required: true, class:'nput-sec' %>
  </div>
  <div class="input noBorder">
        <%= form.select :measurement_unit, options_for_select(['units', 'grams', 'kg', 'pounds']), { prompt: 'Select a category  ...' }, class: 'form-select my-2 btn btn-outline-secondary', style: 'height:40px; width:235px',  class:'nput-sec' %>
  </div>
  <div class="input noBorder">
    <%= form.number_field :price, placeholder: "Enter food price...", required: true, class:'nput-sec' %>
  </div>
  <div class="input noBorder">
    <%= form.number_field :quantity, placeholder: "Enter quantity value...", required: true, class:'nput-sec' %>
  </div>
  <%=form.submit "Create food", class: "submit btn btn-dark"%>
<%end%>
</div>